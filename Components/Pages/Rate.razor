<div class="container">
    @Epf
    <form >        
        <div class="col-sm-1">
            <label for="from">
                Shift
            </label>
        </div>
        <div class="col-sm-3">
            <select class="form-control" id="shift" name="shift"  @bind="shift">
                <option value="">Select</option>
                <option>A</option>
                <option>B</option>
                <option>General</option>
            </select>
        </div>
        <div class="col-sm-1">
            <label for="from">
                Route
            </label>
        </div>
        <div class="col-sm-3">
            <select class="form-control" id="route" name="route" @bind="Route">
                <option value="">Select</option>
                @foreach (var sap in _seatCap)
                {
                    <option value="@sap.RouteNumber">@sap.RouteNumber</option>
                }
            </select>
        </div>
        <div class="col-sm-1">
            <label for="veh">
                EPF
            </label>
        </div>
