            <input class="form-control" id="epf" name="epf" type="text" @bind="Epf"/>
        </div>
        <br />
        <br />
        <div class="col-sm-1">
            <label for="driver">
                Driver
            </label>
        </div>
        <div class="col-sm-3">
            <select class="form-control" id="dri" name="dri" @bind="Driver">
              
                <option value="">Select</option>
                
                @foreach (var sap in _seatCap)
                {
                    <option value="@sap.DriverName">@sap.DriverName</option>
                }
             

            </select>
        </div>

        <br />
        <br />
        <br />
        
        <input type="submit" class="btn btn-info" value="Search" @onclick="NavigateToOtherPage"/>
        
    </form>
</div>

