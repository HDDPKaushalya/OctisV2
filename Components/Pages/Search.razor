@page "/Search"
@using octisv2.Components.Data
@using octisv2.Components.Services
@inject NavigationManager Navigation

<h3>Search</h3>
<div class="jumbotron">
    <table >
        <tr>
            <td>Route : @mn.Route</td>
            <td>Capacity: @_seatCap.SeatingCapacity</td>
        </tr>
        <tr>
            <td>Occupancy : @_seatCap.Occupancy</td>
            <td>
                <div class="element">
                    Available Seats :@_seatCap.Availability
                </div>
            </td>
        </tr>
