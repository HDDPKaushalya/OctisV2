            <div class="col-xs-2">
                @_seatCap.RouteNumber
            </div>
        </div>

        <div>
            <label class="control-label col-xs-2" for="Capacity">Capacity</label>
            <div class="col-xs-1">
                @_seatCap.SeatingCapacity
            </div>

        </div>
        <div>
            <label class="control-label col-xs-2" for="Occupancy">Occupancy</label>
            <div class="col-xs-1">
                @_seatCap.Occupancy
            </div>
        </div>
        <div>
            <label class="control-label col-xs-2" for="Available_Seats">Available Seats</label>
            <div class="col-xs-1">

                <p id="element" style="background-color: palegreen; font-size: small">@_seatCap.Availability</p>
            </div>
        </div>
    </div>
    <div class="row">

        <div>
            <label class="control-label col-xs-1" for="Driver">Driver</label>
            <div class="col-xs-3">
                <p id="element2" style="background-color: #ffd972; font-size: small">@mn.Driver</p>
            </div>
        </div>
        <div>
            <label class="control-label col-xs-2" for="Driver_s_Mobile">Driver&#39;s Mobile</label>
            <div class="col-xs-2">
                @_seatCap.Mobile
            </div>
        </div>
    </div>

    <div class="row">
        <div>
            <label class="control-label col-xs-2" for="Route_Lead">Route Lead</label>
            <div class="col-xs-2">

            </div>
        </div>
